@model List<Post>

<div class="row">
    <div class="col-12">
        <h2>Post List</h2>
        <a asp-controller="Posts" asp-action="Create" class="btn btn-secondary">Yeni Post</a>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th style="width: 200px">Image</th>
                <th>Id</th>
                <th>Title</th>
                <th>isActive</th>
                <th style="width: 125px"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image" class="img-fluid"/>
                    </td>
                    <td>@item.PostId</td>
                    <td>@item.Title</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a asp-controller="Posts" asp-action="Update" asp-route-id="@item.PostId" class="btn btn-sm btn-primary">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>